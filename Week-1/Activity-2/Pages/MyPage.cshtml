@page
@model MyFirstProyect.Models.MyPageModel

<h1>Form</h1>
<form method="post">
    <div class="mb-3">
        <label for="number1">Number 1:</label>
        <input type="text" id="number1" name="Number1" value="@Model.Number1">
    </div>
    <div class="mb-3">
        <label for="number2">Number 2:</label>
        <input type="text" id="number2" name="Number2" value="@Model.Number2">
    </div>

    <button type="submit" class="btn btn-success">Calcular suma</button>

    @if (Model.Mensaje != null){
        <p>@Model.Mensaje</p>
    }
</form>
